<?xml version="1.0" encoding="UTF-8"?>
<protocol>
    <struct name="role_info" note="用户信息">
        <string name="user_name" note="用户名"/>
        <string name="name" note="真实姓名"/>
        <string name="mobile" note="手机号"/>
        <string name="email" note="电子邮件" default="demo@wanda.cn"/>
        <int name="level" note="等级"/>
        <string name="address" note="地址"/>
        <string name="country" note="国籍" default="中国"/>
        <int name="gender" note="性别" default="1"/>
        <list name="exp">
            <int/>
        </list>
        <list name="info">
            <string/>
        </list>
        <list name="demo" info="测试">
            <list>
                <list>
                    <int/>
                </list>
            </list>
        </list>
        <list name="children">
            <struct>
                <int name="gender" default="1" note="性别"/>
                <int name="age"/>
                <string name="name"/>
            </struct>
        </list>
    </struct>
    <action name="demo_role">
        <request>
            <int name="role_id"/>
        </request>
        <response extend="/xapi/result">
            <struct name="data" extend="role_info"/>
        </response>
    </action>
    <action name="demo_role" method="post">
        <request>
            <string name="role_ids"/>
        </request>
        <response extend="/xapi/result">
            <list name="data">
                <struct extend="role_info"/>
            </list>
        </response>
    </action>
    <action name="demo_role" method="delete">
        <request>
            <int name="role_id"/>
        </request>
        <response extend="/xapi/result">
            <int name="data"/>
        </response>
    </action>
    <action name="demo_role" method="put">
        <request>
            <string name="role_ids"/>
        </request>
        <response extend="/xapi/result">
            <map name="data">
                <int note="role_id"/>
                <struct extend="role_info" note="用户信息">
                    <string name="remark" note="备注"/>
                    <struct name="demo">
                        <string name="user_name" note="用户名"/>
                        <string name="name" note="真实姓名"/>
                        <string name="mobile" note="手机号"/>
                    </struct>
                </struct>
            </map>
        </response>
    </action>
</protocol>